<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.CalorieCounter.FullscreenContainer"
    android:id="@+id/foodFragment"
    tools:context=".ui.models.FoodFragment">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Enter Food Name"
                android:inputType="textPersonName"
                android:textColor="@drawable/fuckgoogle"
                android:textColorHint="@drawable/fuckgoogle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.75" />

            <ImageButton
                android:id="@+id/delete_forever_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/DarkRed"
                android:src="@drawable/ic_baseline_delete_forever_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/White" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Fat (g/Portion)"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

        <EditText
            android:id="@+id/editTextNumberDecimal3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Carbs (g/Portion)"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

        <EditText
            android:id="@+id/editTextNumberDecimal4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Protein (g/Portion)"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

        <EditText
            android:id="@+id/editTextNumberDecimal5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Portion (g)"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

        <EditText
            android:id="@+id/editTextNumberDecimal6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Cal. (cal./Portion)"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

        <EditText
            android:id="@+id/editTextNumberDecimal7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Total weight (g)"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

        <EditText
            android:id="@+id/editTextNumberDecimal8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@drawable/fuckgoogle"
            android:ems="10"
            android:hint="Total calories"
            android:inputType="numberDecimal"
            android:textColorHint="@drawable/fuckgoogle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>